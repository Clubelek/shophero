{

  "manifest_version": 2,
  "name": "Shophero",
  "version": "1.0",

  "description": "Zotero for buyers",

  "icons": {
    "48": "icons/border-48.png"
  },

  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "icons/beasts-32.png",
    "default_title": "Shophero",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["amazon.js"]
    }
  ],
  "options_ui":{
	  "page":"options/options.html",
	  "browser_style": true
  }
}
